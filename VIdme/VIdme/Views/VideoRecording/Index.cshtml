@{
    ViewBag.Title = "Videos";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}


@section headScripts
{
    <script src='//cameratag.com/2.0/cameratag.js' type='text/javascript'></script>
<script src="~/Scripts/App/Controllers/candidateController.js"></script>
<script src="~/Scripts/App/Controllers/ratingController.js"></script>
}



<div id="main2" class="container">
    <div class=" row clearfix">
        <div class="col-md-12 column">
            <h2>Christian Johansen</h2>
        </div>
    </div>
    <div class=" row clearfix">
        <div class="col-md-12 column">
            <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
                <li class="active"><a href="#company_1" data-toggle="tab">Danske Bank</a></li>
                <li><a href="#company_2" data-toggle="tab">Nordea</a></li>
                <li><a href="#company_3" data-toggle="tab">+ new</a></li>
            </ul>
            <div id="my-tab-content" class="tab-content" >
                <div class="tab-pane active" id="company_1" ng-controller="candidatesCtrl">
                    <div class="container">
                        <div class="row" clearfix>
                            <div class="col-md-5 column">
                                <div>
                                    <form class="form-horizontal">
                                        <fieldset>


                                            <camera id='camRecorder' data-app-id='a-49b08850-6ed3-0131-31ec-22000a499ea4' style='width: 418px; height: 300px; background-color: #5bc0de'></camera>
                                        </fieldset>
                                    </form>
                                </div>
                                length : {{candidates.length}}
                                <ul class="vidme-list">
                                    <li ng-repeat="candidate in candidates">
                                        <div class="vidme-bar">
                                            <button type="button" class="blue-button vidme-bar-right">
                                                <span class="glyphicon glyphicon-arrow-right"></span>
                                            </button>
                                            <div class="green-button vidme-bar-right"></div>
                                            <div class="vidme-bar-left">
                                                <img ng-src="{{candidate.image}}" />
    </div>
  <div class="vidme-bar-center">
        <div>{{candidate.name}}</div>
        @*<rating value="{{candidate.rate}}" max="5" readonly="isReadonly" on-hover="hoveringOver(value)" on-leave="overStar = null"></rating>
        <span class="label" ng-class="{'label-warning': percent<30, 'label-info': percent>=30 && percent<70, 'label-success': percent>=70}" ng-show="overStar && !isReadonly">{{percent}}%</span>*@
    ></div>

                                        </div>
                                        {{candidate.name}}
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-5 column">
                                <div class="LinkedIn" style="height:600px;">
                                    <div ng-controller="RatingDemoCtrl">
                                        <h4>Default</h4>
                                        <rating value="rate" max="max" readonly="isReadonly" on-hover="hoveringOver(value)" on-leave="overStar = null"></rating>
                                        <span class="label" ng-class="{'label-warning': percent<30, 'label-info': percent>=30 && percent<70, 'label-success': percent>=70}" ng-show="overStar && !isReadonly">{{percent}}%</span>
                                        <pre style="margin:15px 0;">Rate: <b>{{rate}}</b> - Readonly is: <i>{{isReadonly}}</i> - Hovering over: <b>{{overStar || "none"}}</b></pre>
                                        <button class="btn btn-sm btn-danger" ng-click="rate = 0" ng-disabled="isReadonly">Clear</button>
                                        <button class="btn btn-sm btn-default" ng-click="isReadonly = ! isReadonly">Toggle Readonly</button>
                                        <hr />
                                        <h4>Custom icons</h4>
                                        <div ng-init="x = 5"><rating value="x" max="15" state-on="'glyphicon-ok-sign'" state-off="'glyphicon-ok-circle'"></rating> <b>(<i>Rate:</i> {{x}})</b></div>
                                        <div ng-init="y = 2"><rating value="y" rating-states="ratingStates"></rating> <b>(<i>Rate:</i> {{y}})</b></div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="company_2">
                    <h1>Orange</h1>
                    <p>orange orange orange orange orange</p>
                </div>
                <div class="tab-pane" id="company_3">
                    <h1>Yellow</h1>
                    <p>yellow yellow yellow yellow yellow</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix">

    </div>
</div>
@section scripts
{
    
<script src="~/Scripts/App/Controllers/candidateController.js"></script>
<script src="~/Scripts/App/Controllers/ratingController.js"></script>
    <script>
        $('.camera_tag .cameratag_screen.cameratag_start').css('background-color', '#5bc0de');

    </script>
}