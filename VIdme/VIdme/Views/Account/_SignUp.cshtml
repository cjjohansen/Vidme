<form class="form-horizontal">
    <fieldset>

        <!-- Form Name -->
        <legend>SignUp</legend>

        <!-- Text input-->
        <div class="control-group">
            <label class="control-label" for="firstName"></label>
            <div class="controls">
                <input id="firstName" name="firstName" placeholder="First name" class="input-xlarge" required="" type="text">

            </div>
        </div>

        <!-- Text input-->
        <div class="control-group">
            <label class="control-label" for="lastName"></label>
            <div class="controls">
                <input id="lastName" name="lastName" placeholder="Last name" class="input-xlarge" required="" type="text">

            </div>
        </div>

        <!-- Text input-->
        <div class="control-group">
            <label class="control-label" for="email"></label>
            <div class="controls">
                <input id="email" name="email" placeholder="email" class="input-xlarge" required="" type="text">

            </div>
        </div>

        <!-- Password input-->
        <div class="control-group">
            <label class="control-label" for="password"></label>
            <div class="controls">
                <input id="password" name="password" placeholder="Password" class="input-xlarge" required="" type="password">

            </div>
        </div>

        <!-- Password input-->
        <div class="control-group">
            <label class="control-label" for="passwordRepeated"></label>
            <div class="controls">
                <input id="passwordRepeated" name="passwordRepeated" placeholder="Password verification" class="input-xlarge" required="" type="password">

            </div>
        </div>

    </fieldset>
</form>

